// Vector operations

(Int, (Int, Int)) create (Int n) {
    return (n, (n, n));
}

(Int, (Int, Int)) add ((Int, (Int, Int)) v1, (Int, (Int, Int)) v2) {
    return (fst(v1) + fst(v2),(
            fst(snd(v1)) + fst(snd(v2)),
            snd(snd(v1)) + snd(snd(v2))));
}

(Int, (Int, Int)) scale ((Int, (Int, Int)) v, Int f) {
    return (fst(v)*f,(
            fst(snd(v))*f,
            snd(snd(v))*f));
}

Void main () {
	(Int,(Int,Int)) vector1 = create(1);
	(Int,(Int,Int)) vector2 = create(2);

	print(fst(add(vector1, vector2)));// => 3
	print(fst(scale(vector1, 4)));    // => 4
}

