// Calculate the sum of a list of integers
Int sum ([Int] list) {
    Int   x  = 0;  // Do not have to be initialised,
    [Int] xs = []; // bet have to be declared.

    match list
    case ([])
        return 0;
    case (x:xs)
        return x + sum(xs);
}

Void main () {
        print(sum(1:3:5:[])); // => 9
}

