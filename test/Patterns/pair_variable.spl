Int matcher (Int i, Bool b)
{
    (Int,Bool) pair = (i,b);
    Int        x    = 0;

    match pair
    case ((0,True))
        return 0;
    case ((1,False))
        return -1;
    case ((x,True))
        return x;
    case ((x,False))
        return -x;
}

Void main () {
    print(matcher(0,True)); // =>  0
    print(matcher(1,False));// => -1
    print(matcher(4,True)); // =>  4
    print(matcher(8,False));// => -8
}

