Int matcher ([Int] list)
{
    [Int] xs = [];

    match list
    case ([])
        return 0;
    case (1:[])
        return 1;
    case (1:2:[])
        return 2;
    case (1:2:3:xs)
        return 4;
    case (_)
        return 8;
}

Void main () {
    print(matcher([]));         // => 0
    print(matcher(1:[]));       // => 1
    print(matcher(1:2:[]));     // => 2
    print(matcher(1:2:3:[]));   // => 4
    print(matcher(1:2:3:4:[])); // => 4
    print(matcher(4:3:2:1:[])); // => 8
}

